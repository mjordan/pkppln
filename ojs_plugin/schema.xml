<schema version="0.1">

	<!--
	 *
	 * TABLE lom_payloads
	 *
	 -->
	<table name="lom_payloads">
		<field name="payload_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="issue_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="payload_uuid" type="C2" size="255">
			<NOTNULL/>
		</field>
    <field name="payload_checksum" type="C2" size="255">
      <NOTNULL/>
    </field>
    <field name="last_update" type="C2" size="255">
			<NOTNULL/>
		</field>
    <field name="last_result" type="I8">
      <NOTNULL/>
    </field>
		<descr>Lockss-O-Matic Payloads</descr>
		<index name="lom_payloads_payload_id">
			<col>payload_id</col>
		</index>
	</table>
  
</schema>
